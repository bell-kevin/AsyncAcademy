@page
@model AsyncAcademy.Pages.CalendarModel
@{
}

<!DOCTYPE html>
<html>
<head>

    <style>

        html, body {
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 1100px;
            margin: 40px auto;
        }

    </style>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar/index.global.min.js'></script>
    <script>

        //making CalendarEvents a json object for the eventsource
        var obj = @Json.Serialize(Model.CalendarEvents);

        //renders calendar
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar')
            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },

                //eventsource
                events: @Json.Serialize(Model.CalendarEvents),
                displayEventTime: true
            })
            calendar.render()
        })

    </script>
</head>
<body>
    <div id='calendar'></div>
</body>
</html>
